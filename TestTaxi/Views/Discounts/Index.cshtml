@model TestTaxi.Models.MyIndexViewModel<TestTaxi.Models.Discount>
@using TestTaxi.Helpers

@{
    ViewBag.Title = "Скидки";
}

<h2>Скидки</h2>

<p>
    @Html.ActionLink("Добавить новую", "Create")
</p>
<form method="get">
    <div class="form-inline">
        <label class="control-label">Процент: </label>
        <input type="text" name="filtr" value="@ViewBag.Filtr" class="form-control text-box" type="number">
        <input type="submit" value="Фильтр" class="btn btn-default" />
    </div>
</form>
<table class="table">
    <tr>
        <th>
           Наименование
        </th>
        <th>
            Процент
        </th>
        <th></th>
    </tr>

@foreach (var item in Model.Keeps) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Percent)
        </td>
        <td>
            @Html.ActionLink("Изменить", "Edit", new { id=item.Id }) |
            @Html.ActionLink("Детали", "Details", new { id=item.Id }) |
            @Html.ActionLink("Удалить", "Delete", new { id=item.Id })
        </td>
    </tr>
}

</table>
<div class="btn-group">
    @Html.PageLinks(Model.PageInfo, x => Url.Action("Index", new { page = x }))
</div>
